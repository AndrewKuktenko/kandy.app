---
import type { ExperienceProps } from "../types/experience.props";
import IconArrowLink from "../icons/arrow-link.astro";

interface Props extends ExperienceProps {}

const { dates, title, company, companyUrl, description, technologies, logo } =
  Astro.props;
---

<li>
  <a
    href={companyUrl}
    target="_blank"
    rel="noreferrer"
    aria-label={title}
    onclick={companyUrl ? undefined : "event.preventDefault();"}
    class="group relative grid pb-1 transition-all hover:backdrop-blur-sm duration-500 sm:grid-cols-8 sm:gap-8 md:gap-4"
  >
    <div
      class="absolute -inset-x-4 -inset-y-4 z-0 rounded-md transition motion-reduce:transition-none lg:-inset-x-6 bg-pink-200 sm:bg-inherit sm:group-hover:bg-pink-200 sm:drop-shadow-none sm:group-hover:drop-shadow-md"
    >
    </div>
    <header
      class="z-10 mb-2 mt-1 text-xs font-roboto-condensed font-semibold uppercase tracking-wide text-blue-600 sm:text-zinc-600 sm:group-hover:text-blue-600"
      aria-label={dates}
    >
      <span>{dates}</span>
    </header>
    <div class="z-10 sm:col-span-6">
      <h3 class="font-medium font-roboto-condensed leading-snug">
        <div>
          <div
            class="inline-flex items-baseline font-medium leading-tight text-blue-600 sm:text-zinc-600 sm:group-hover:text-blue-600 group/link text-base"
          >
            <span
              class="absolute -inset-x-4 -inset-y-2.5 hidden rounded md:-inset-x-6 md:-inset-y-4 lg:block"
            ></span>
            <div class="flex gap-x-2 items-center">
              {
                logo && (
                  <img
                    class="w-8 h-8 rounded grayscale-0 sm:grayscale sm:group-hover:grayscale-0"
                    src={logo}
                    alt={`${company} logo`}
                  />
                )
              }
              <span
                >{title} Â·
                <span class="inline-block">
                  {company}
                  {companyUrl && <IconArrowLink />}
                </span>
              </span>
            </div>
          </div>
        </div>
      </h3>
      <p
        class="mt-2 text-sm font-medium leading-normal text-blue-600 sm:text-zinc-600 sm:group-hover:text-blue-600"
      >
        {description}
      </p>
      {
        technologies.length && (
          <ul class="mt-2 flex flex-wrap" aria-label="Technologies used">
            {technologies.map((technology) => (
              <li class="mr-1.5 mt-2">
                <div class="flex items-center font-roboto-condensed rounded-full text-blue-600 bg-white sm:border-zinc-700 shadow-sm px-3 py-1 text-xs font-medium leading-5 sm:border sm:border-opacity-50 sm:text-zinc-600 sm:group-hover:border-transparent sm:group-hover:text-blue-600 sm:group-hover:bg-white">
                  {technology}
                </div>
              </li>
            ))}
          </ul>
        )
      }
    </div>
  </a>
</li>
